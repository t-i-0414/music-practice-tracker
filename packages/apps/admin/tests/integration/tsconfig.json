{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["ES2017", "dom"],
    "sourceMap": true,
    "types": ["cypress", "node", "@testing-library/cypress"],
    "strictNullChecks": true,
    "isolatedModules": false,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["../../src/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
