{
  "name": "@music-practice-tracker/eslint-rules",
  "version": "1.0.0",
  "description": "Custom ESLint rules for Music Practice Tracker",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "lint:check": "eslint",
    "lint:fix": "eslint --fix",
    "test": "vitest",
    "test:cov": "vitest run --coverage",
    "test:watch": "vitest",
    "type:check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/eslint": "^8.56.0",
    "@types/estree": "^1.0.5",
    "@typescript-eslint/rule-tester": "^8.34.1",
    "@typescript-eslint/utils": "^8.34.1"
  }
}
