{
  "name": "music-practice-tracker",
  "version": "1.0.0",
  "workspaces": [
    "packages/apps/*",
    "packages/libs/*"
  ],
  "scripts": {
    "cspell": "cspell '**'",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write . && bun run format:prisma",
    "format:prisma": "cd packages/apps/backend && bun run prisma:format && cd -",
    "postinstall": "sh scripts/postinstall.sh",
    "type:check": "sh scripts/type_check.sh",
    "type:sync": "sh scripts/type_sync_and_install.sh"
  },
  "dependencies": {
    "@prisma/client": "^6.9.0",
    "dotenv": "^16.5.0",
    "react": "19.0.0",
    "react-dom": "19.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3.3.1",
    "@types/eslint": "^9.6.1",
    "@types/estree": "^1.0.8",
    "@types/node": "22.15.31",
    "@types/react": "^19.1.7",
    "@types/react-dom": "^19.1.6",
    "@vitest/coverage-v8": "^3.2.3",
    "cspell": "^9.0.2",
    "dotenv-linter": "^0.2.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "lefthook": "^1.11.13",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typesync": "^0.14.3",
    "vitest": "^3.2.3"
  }
}
